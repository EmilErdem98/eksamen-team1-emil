---
const imageUrl = Astro.props.imageUrl
const overskrift = Astro.props.overskrift
const tekst = Astro.props.tekst
import MainLayout from "../layouts/MainLayout.astro";
---


<div class="bg-guld100 md:bg-lysebrun100 md:rounded-lg shadow-lg p-5 h-100 w-100  flex flex-col items-center text-center ">
    <div class="p-4 mb-4">
        <img src={imageUrl}alt="Ikoner" class="w-16 h-16">
    </div>
    <h2 class="text-xl text-blå500 font-bold font-Lato mb-2">{overskrift}</h2>
    <p class="text-blå500 font-Lato leading-loose">
        {tekst}
    </p>
</div>