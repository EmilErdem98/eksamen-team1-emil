<script>
    // Importér funktionerne 'animate' og 'inView' fra "motion"-biblioteket
    import { animate, inView } from "motion";

// Finder alle HTML-elementer med klassenavn '.box' og gemmer dem i variablen 'elementerMedAnimation'
const elementerMedAnimation = document.querySelectorAll(".box");

// Definer en forsinkelse for animationen mellem hver boks
const forsinkelse = 0.2; // 0.2 sekunder

// Definer den ønskede rækkefølge for boksene
const rækkefølge = ["Medlemmer", "Kampagner", "Politisk lobbyarbejde", "Fredninger", "Lokale sager"];

// Loop gennem hvert .box-element i den ønskede rækkefølge
rækkefølge.forEach((elementNavn, index) => {
    // Find det .box-element med det tilsvarende overskrift
    const element = Array.from(elementerMedAnimation).find(box => box.querySelector("h4").textContent === elementNavn);

    // Hvis elementet blev fundet, anvend animationen på det
    if (element) {
        // Brug 'inView'-funktionen til at registrere, når elementet bliver synligt i viewport
        inView(element, () => {
            // Når elementet bliver synligt, tilføjer vi CSS-klassen 'slide-right' til elementet med en forsinkelse baseret på indekset
            element.style.animationDelay = `${index * forsinkelse}s`;
            element.classList.add("slide-right");
        });
    }
});
</script>


